<Window x:Class="FF.Vegas.Deploy.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FF.Vegas.Deploy.UI"
        mc:Ignorable="d"
        Title="Vegas Deploy" Height="427" Width="773" MinWidth="650">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="200" MaxWidth="250"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Border>
                <StackPanel>
                    <Button x:Name="btnCommit" Click="btnCommit_Click" Margin="5,5,0,5">Commit</Button>
                    <Button x:Name="btndeploy" Click="btndeploy_Click" Margin="5,5,0,5">Deploy</Button>
                    <Button x:Name="btnSettings" Click="btnSettings_Click" Margin="5,5,0,5">Settings</Button>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Column="1" >
            <StackPanel Margin="10">
                <Frame x:Name="frmMain" NavigationUIVisibility="Hidden">
                    
                </Frame>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
